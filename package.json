{
    "name": "yaml-rocket-ship",
    "displayName": "YAML Rocket Ship",
    "description": "TODO description",
    "version": "0.0.2",
    "publisher": "nc-rocket",
    "repository": "https://github.com/Microsoft/pipelines-vscode",
    "icon": "assets/ymlfile.png",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:azure-pipelines"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "azure-pipelines",
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    ".vsts-ci.yml"
                ],
                "aliases": [
                    "Azure Pipelines"
                ]
            }
        ],
        "grammars": [
            {
                "language": "azure-pipelines",
                "scopeName": "source.yaml",
                "path": "./syntaxes/yaml.tmLanguage.json"
            }
        ],
        "yamlValidation": [
            {
                "fileMatch": "*.yml",
                "url": "./local-schema.json"
            }
        ],
        "configuration": {
            "title": "My extension configuration - TODO: Rename",
            "properties": {
                "yaml.validate": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable validation feature"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile:extension": "tsc -p ./",
        "compile:langserv": "tsc -p ./vendor/yaml-language-server",
        "compile": "npm run compile:langserv && npm run compile:extension",
        "watch:extension": "tsc -watch -p ./",
        "watch:langserv": "tsc -watch -p ./vendor/yaml-language-server",
        "watch": "npm run watch:langserv && npm run watch:extension",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "removeschemastore": "node remove-schema-store-settings.js"
    },
    "devDependencies": {
        "typescript": "2.6.1",
        "vscode": "1.1.18",
        "tslint": "5.8.0",
        "ts-node": "3.3.0",
        "@types/node": "7.0.43",
        "@types/mocha": "2.2.42"
    },
    "dependencies": {
        "vscode-languageclient": "4.4.0",
        "vscode-nls": "3.2.4",
        "vscode-uri": "1.0.5",
        "yaml-language-server": "file:vendor/yaml-language-server"
    }
}
